service cloud.firestore {
  match /databases/{database}/documents {

    // Users may only read their own profile
    match /users/{userId} {
      allow read, delete: if request.auth != null && request.auth.uid == userId;
      allow update: if request.auth != null && request.auth.uid == userId && 
        !request.resource.data.diff(resource.data).affectedKeys().hasAny(['status']);
      allow create: if request.auth != null && request.resource.id == request.auth.uid;
    }

    // Anyone may read section info
    match /sections/{sectionId} {
      allow read;

      // Any logged in user may read shifts in a section
      match /shifts/{shiftId} {
        allow read: if request.auth != null;
        
        // Users may reserve a shift for themselves.
        // Only the user who reserved the shift may change the reservation data.
        allow update: if (request.resource.data.diff(resource.data).affectedKeys()
          .hasOnly(['reservedBy', 'reservedDetails'])) 
          && ((resource.data.reservedBy == null && request.resource.data.reservedBy == request.auth.uid)
          || resource.data.reservedBy == request.auth.uid);
      }
    }
  }
}
